{
  "name": "ecosse-planetary-sandbox",
  "version": "1.0.0",
  "description": "3D Planetary Ecosystem Sandbox",
  "main": "index.html",
  "scripts": {
    "build": "node build-production.js",
    "build:css": "node build-production.js",
    "build:tailwind": "npx tailwindcss -i css/tailwind-src.css -o css/tailwind.min.css --minify",
    "build:tailwind:watch": "npx tailwindcss -i css/tailwind-src.css -o css/tailwind.min.css --minify --watch",
    "serve": "python -m http.server 8000",
    "dev": "python -m http.server 8000"
  },
  "keywords": [
    "3d",
    "ecosystem",
    "simulation",
    "threejs",
    "planetary"
  ],
  "author": "Ecosse Team",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11"
  }
}
